---
layout: null
sitemap_exclude: true
---
<?xml version="1.0" encoding="UTF-8" ?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {% assign indexedPages = site.pages | where:"sitemap_exclude", '' %}
  {% for page in  indexedPages %}
  {% unless page.name == 'redirect.html' %}
  <url>
    <loc>{{site.url}}{{ page.url }}</loc>
    {% assign versions=site.pages|where:"name",page.name %}
    {% for version in versions %}
    {% unless version.lang == page.lang %}
    <xhtml:link rel="alternate" hreflang="{{version.lang}}" href="{{site.url}}{{version.url}}" />
    {% endunless %}
    {% endfor %}
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.5</priority>
  </url>
  {% endunless %}
  {% endfor %}
  {% assign indexedPages = site.posts | where:"isDraft", '' %}
  {% for page in  indexedPages %}
  {% unless page.html_title == 'redirect.html' %}
  <url>
    <loc>{{site.url}}{{ page.url }}</loc>
    {% assign versions=site.posts|where:"title",page.title %}
    {% for version in versions %}
    {% unless version.lang == page.lang %}
    <xhtml:link rel="alternate" hreflang="{{version.lang}}" href="{{site.url}}{{version.url}}" />
    {% endunless %}
    {% endfor %}
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.7</priority>
  </url>
  {% endunless %}
  {% endfor %}
</urlset>